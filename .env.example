# ===================================
# WhatsApp Bot Configuration
# ===================================

# Bot Settings
BOT_PORT=5000
BOT_NAME="Nanda Motor Bot"

# Admin WhatsApp Number (untuk terima web live chat)
# Format: 628123456789 (tanpa + atau -)
ADMIN_WHATSAPP=628531462xxxx

# Database Mode
# Options: 'mysql' or 'json'
# - mysql: Use MySQL database (for production with website)
# - json: Use local JSON files (for standalone/testing)
DB_MODE=json

# ===================================
# MySQL Database Configuration
# (Only needed if DB_MODE=mysql)
# ===================================

# Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=nanda_motor

# Connection Pool Settings
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# ===================================
# Website Integration
# (Only needed if integrated with Nanda Motor website)
# ===================================

# Website Backend URL
WEBSITE_API_URL=http://localhost:3000

# Webhook Secret (for security)
WEBHOOK_SECRET=your_secret_key_here

# ===================================
# Optional Settings
# ===================================

# Session Data Path
SESSION_PATH=./.wwebjs_auth

# Enable Debug Mode
DEBUG=false

# Auto-sync Products Interval (in minutes)
# Set to 0 to disable auto-sync
PRODUCT_SYNC_INTERVAL=30
